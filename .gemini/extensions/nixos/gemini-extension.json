{
  "name": "NixOSMCP",
  "version": "1.0.0",
  "mcpServers": {
    "nixos": {
      "command": "nix",
      "args": # IMPORTANT: the top-level key is `mcp_servers` rather than `mcpServers`.
[mcp_servers.server-name]
command = "npx"
args = ["-y", "mcp-server"]
env = { "API_KEY" = "value" }    }
  }
}
